{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Valut39-decrypto",
    "version": "0.0.1"
  },
  "tauri": {
     "allowlist": {
      "all": false,
      "path":{
        "all":true
      },
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "open": true,
        "save": true,
        "message": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.decrypto.valut39",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Valut39-decrypto",
        "width": 800,
        "height": 600
      }
    ]
  }
}
